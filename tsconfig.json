{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "strict": false,
        "allowSyntheticDefaultImports": true,
        "watch": true,
        "lib": ["es2017", "dom"]
    },
    "exclude": ["dist", "node_modules"],
    "include": [
        "./src/**/*"
    ]
}